#/usr/bin/env python
import os, shutil

folder = './'
xmipp_script = 'xmipp'
sonar_script = 'sonar-project.properties'
# get folder relative to home dir and strip os.path separators
script_dir = os.path.dirname(os.path.realpath(__file__)).split(os.getcwd())[1][1:] 
copy_list = [xmipp_script, script_dir, sonar_script]
dest_folder = os.path.join(os.getcwd(), 'src', 'xmipp')

os.makedirs(dest_folder)

for item in os.listdir(folder):
    item_path = os.path.join(folder, item)
    try:
        if item in copy_list:
            shutil.copy(item_path, dest_folder)
        else:
            shutil.move(item_path, dest_folder)
    except Exception as e:
        print(e)
